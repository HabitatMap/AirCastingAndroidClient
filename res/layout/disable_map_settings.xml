<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/DialogMain"
        >

  <include layout="@layout/toolbar"/>

  <TextView android:id="@+id/disable_maps_description"
            android:text="@string/disable_maps_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:textSize="16sp"
            style="@style/DialogText"
            />

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/disable_maps_checkbox"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="1sp"
                  android:layout_marginTop="6dp"
                  android:gravity="center_vertical"
        />

        <Button android:text="@string/ok"
                style="@style/DialogButton"
                android:id="@+id/disable_maps_ok"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/disable_maps_checkbox"
                android:gravity="center_vertical"
        />
    </RelativeLayout>

</LinearLayout>